<div class="l-container">
  <%= render partial: "layouts/admin/article_menu" %>
  <div class="l-main-view">
    <div class="sw-main-header">
      <div class="sw-main-header-title">
        <%= @series&.title %>
      </div>
      <div class="sw-main-header-buttons">
        <div class="sw-main-header-button">
          <a class="btn btn-primary btn-sm" href="<%= edit_admin_series_path(id: @series&.id) %>">
            <%= t "buttons.edit" %>
          </a>
        </div>
      </div>
    </div>
    <div class="sw-main-body">
      <%= render partial: "admin/flash" %>
      <ul class="breadcrumb p-3">
        <%= render partial: "admin/series/breadcrumb/index" %>
        <%= render partial: "admin/series/breadcrumb/show" %>
      </ul>
      <div class="section">
        <h2 class="admin-title mb-2">連載</h2>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="model-key">
                  <%= t "activerecord.attributes.series.id" %>
                </div>
                <div class="model-value">
                  <%= @series&.id %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.thumbnail" %>
                  </div>
                  <div class="model-value w-100">
                    <% if @series&.thumbnail.attached? %>
                      <%= image_tag(@series&.thumbnail, class: "w-50") %>
                    <% else %>
                      画像なし
                    <% end %>
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.current_status" %>
                  </div>
                  <div class="model-value">
                    <div class="status-mark <%= @series&.current_status %>"></div>
                    <%= t "activerecord.enum.article.current_status.#{@series&.current_status}" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.title" %>
                  </div>
                  <div class="model-value">
                    <%= @series&.title %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.subtitle" %>
                  </div>
                  <div class="model-value">
                    <%= @series&.subtitle %>
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.published_at" %>
                  </div>
                  <div class="model-value">
                    <%= @series&.published_at %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.created_at" %>
                  </div>
                  <div class="model-value">
                    <%= @series&.created_at %>
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <div class="model-key">
                    <%= t "activerecord.attributes.series.updated_at" %>
                  </div>
                  <div class="model-value">
                    <%= @series&.updated_at %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="section">
        <h2 class="admin-title">関連する記事一覧</h2>
        <%= render partial: "admin/articles/index_table" %>
        <div class="d-flex justify-content-center m-2">
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>
