<div class="l-container">
  <%= render partial: "layouts/admin/article_menu" %>
  <div class="l-main-view">
    <div class="sw-main-header">
      <div class="sw-main-header-title">
        <%= @category&.name %>
      </div>
      <div class="sw-main-header-buttons">
        <div class="sw-main-header-button">
          <%= link_to edit_admin_category_path, class: "btn btn-primary" do %>
            <%= t "buttons.edit" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="sw-main-body">
      <ul class="breadcrumb p-3">
        <%= render partial: "admin/categories/breadcrumb/index" %>
        <%= render partial: "admin/categories/breadcrumb/show" %>
      </ul>
      <div class="section">
        <%= render :partial => "admin/flash" %>
      </div>
      <div class="section">
        <h2 class="admin-title">カテゴリ</h2>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="model-key">
                  <%= t "activerecord.attributes.category.id" %>
                </div>
                <div class="model-value">
                  <%= @category&.id %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="model-key">
                  <%= t "activerecord.attributes.category.name" %>
                </div>
                <div class="model-value">
                  <%= @category&.name %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="model-key">
                  <%= t "common.created_at" %>
                </div>
                <div class="model-value">
                  <%= @category&.created_at %>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="model-key">
                  <%= t "common.updated_at" %>
                </div>
                <div class="model-value">
                  <%= @category&.updated_at %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="section">
        <h2 class="admin-title">関連する記事一覧</h2>
        <%= render partial: "admin/articles/index_table" %>
        <div class="d-flex justify-content-center m-2">
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>
