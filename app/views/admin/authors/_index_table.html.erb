<div class="sw-main-body-table table-responsive">
  <table>
    <thead>
      <tr>
        <th></th>
        <th>名前</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td class="rowlink">
            <%= link_to admin_author_path(id: author&.id) do %>
            <% end %>
          </td>
          <td style="min-width: 100px;">
            <%= author&.name %>
          </td>
          <td style="min-width: 150px;">
            <%= author&.created_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
